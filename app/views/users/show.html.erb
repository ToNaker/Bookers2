<!-- app/views/users/show.html.erb -->
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>

      <!-- 画像リンク：ユーザ詳細へ（※空文字リンク対策＋Bookers2典型） -->
      <%= link_to user_path(@user), aria: { label: "user profile" } do %>
        <%= image_tag "no_image.jpg", size: "100x100" %>
      <% end %>

      <table class="table mt-2">
        <tr>
          <th>name</th>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <th>introduction</th>
          <td><%= @user.introduction %></td>
        </tr>
      </table>

      <!-- ユーザ編集ボタン：アイコンだけにしない -->
      <div class="mb-3">
        <%= link_to edit_user_path(@user), class: "btn btn-outline-secondary w-100", aria: { label: "edit user" } do %>
          <i class="fa-solid fa-user-gear"></i>
          <span class="ms-1">Edit</span>
        <% end %>
      </div>

      <!-- ↓ここから下は、あなたのアプリの構成に合わせて必要なら残す/削る -->
      <!-- users/show に New book を置く設計ならここに続けてOK -->
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table">
        <thead>
          <tr>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td><%= link_to book.title, book_path(book) %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
